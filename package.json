{
  "name": "svelte-os-themes",
  "type": "module",
  "license": "MIT",
  "version": "0.11.0",
  "main": "./dist/index.js",
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./ThemeProvider": {
      "types": "./dist/ThemeProvider.d.ts",
      "svelte": "./dist/ThemeProvider.js"
    },
    "./useTheme": {
      "types": "./dist/useTheme.svelte.d.ts",
      "svelte": "./dist/useTheme.svelte.js",
      "default": "./dist/useTheme.svelte.js"
    },
    "./parseTheme": {
      "types": "./dist/parseTheme.d.ts",
      "default": "./dist/parseTheme.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "keywords": [
    "Svelte",
    "Svelte Themes",
    "ThemeProvider",
    "Themes",
    "Dark Mode"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/calvo-jp/svelte-os-themes.git"
  },
  "bugs": {
    "url": "https://github.com/calvo-jp/svelte-os-themes/issues"
  },
  "author": {
    "name": "John Paul Calvo",
    "email": "calvojp92@gmail.com"
  },
  "packageManager": "pnpm@10.13.1",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "npm run package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "release": "release-it"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@sveltejs/adapter-vercel": "^5.7.2",
    "@sveltejs/kit": "^2.22.5",
    "@sveltejs/package": "^2.3.12",
    "@sveltejs/vite-plugin-svelte": "^6.0.0",
    "@tailwindcss/vite": "^4.1.11",
    "publint": "^0.3.12",
    "release-it": "^19.0.3",
    "svelte": "^5.35.6",
    "svelte-check": "^4.2.2",
    "tailwindcss": "^4.1.11",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "vite": "^7.0.4"
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${npm.name} v${version}",
      "tagName": "${npm.name}@${version}"
    },
    "github": {
      "release": false
    },
    "hooks": {
      "before:init": [
        "pnpm check"
      ],
      "after:bump": [
        "pnpm package"
      ]
    }
  }
}
